@layout MainLayout
@page "/"
@using Client.Infrastructure
@using global::Shared.DailyTaskDTO
@attribute [Authorize]

@inject HttpDailyTaskService _dailyTaskService

<AuthorizeView>
    <Authorized>
        <UserLine/>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12">
                    <div class="card mb-4">
                        <div class="card-header pb-0">
                            <h6>Habits tracker</h6>
                        </div>
                        <div class="card-body px-0 pt-0 pb-2">
                            <div class="table-responsive p-0">
                                <table class="table align-items-center justify-content-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Habit</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7  ps-2">Amount</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7  ps-2">Unit</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7  ps-2">Frequency</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7  ps-2">Completion</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ">Status</th>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7  ">Mark</th>
                                        </tr>
                                    </thead>
                                    @foreach (var  task in TasksForToday)
                                    {
                                        <tbody>
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2">
                                                    <div class="me-2">
                                                    </div>
                                                    <div class="my-auto">
                                                        <h6 class="mb-0 text-sm">@task.ChallengeTitle</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@task.CountOfUnits</span>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@task.UnitShortName</span>
                                            </td>
                                            <td>
                                                <span class="text-xs font-weight-bold">@task.FrequencyType</span>
                                            </td>
                                            <td class="align-middle">
                                                <div class="d-flex align-items-center ">
                                                    <span class="me-2 text-xs font-weight-bold">@task.PercentOfDone%</span>
                                                    <div>
                                                        <div class="progress">
                                                            <div class="progress-bar bg-gradient-info"
                                                                 role="progressbar"
                                                                 aria-valuemin="0"
                                                                 aria-valuemax="100"
                                                                 style="width: @task.PercentOfDone%;">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (task.IsDone)
                                                {
                                                    <span class="badge badge-sm bg-gradient-success">Done</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-sm bg-gradient-secondary">Undone</span>
                                                }
                                            </td>
                                            <td class="align-middle">
                                                @if (task.UnitShortName.Equals("times") && task.CountOfUnits > 1)
                                                {
                                                    <div class="">
                                                        <button type="button" class="btn bg-gradient-primary mx-auto">
                                                            <i class="ni ni-fat-add"></i>
                                                        </button>
                                                    </div>
                                                }
                                                else if (task.CountOfUnits > 1)
                                                {
                                                    <div class="">
                                                        <button type="button" class="btn bg-gradient-info w-50 mt-0 mb-0 mx-auto">
                                                            Add progress
                                                        </button>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="">
                                                        <button type="button" class="btn bg-gradient-info w-50 mt-0 mb-0 mx-auto">Done</button>
                                                    </div>
                                                }
                                            </td>
                                        </tr>
                                        </tbody>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>

@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; }

    List<DailyTaskDTO> TasksForToday { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var userName = authState.User.Identity.Name;
        var tasksFromDb = await _dailyTaskService.GetAllTasksForToday(userName);
        foreach (var task in tasksFromDb)
        {
            Console.WriteLine(task.ChallengeTitle);
        }
        TasksForToday = tasksFromDb.ToList();
    }

}