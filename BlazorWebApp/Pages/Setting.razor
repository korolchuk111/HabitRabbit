@layout MainLayout
@page "/setting"
@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        <UserLine/>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <form role="form">
                                <label>Username</label>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="email-addon">
                                </div>
                                <label>Email</label>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn bg-gradient-info w-40 mt-4 mb-0 mx-0">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <form role="form">
                                <label>Сurrent password</label>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                </div>
                                <label>New password</label>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn bg-gradient-info w-40 mt-4 mb-0 mx-0">Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <hr/>
                            <hr/>
                            <hr/>
                            <form role="form">
                                <div class="mb-3">
                                    <input class="form-control mx-auto" type="file" id="formFile">
                                </div>
                                <hr/>
                                <hr/>
                                <hr/>
                                <div class="text-center">
                                    <button type="button" class="btn bg-gradient-info w-40 mt-4 mb-0 mx-0">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>

</AuthorizeView>

