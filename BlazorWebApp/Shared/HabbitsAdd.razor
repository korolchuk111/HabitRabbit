@code {
    [CascadingParameter]
    private Task<AuthenticationState> AuthenticationStateTask { get; set; }

    List<List<ChallengeDTO>> ChallengesPerRow { get; set; } = new();
    
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateTask;
        var userName = authState.User.Identity.Name;
        var challenges = await _challengeService.GetChallengesByUser(userName);
        if (challenges.Count == 0)
        {
            ChallengesPerRow = new List<List<ChallengeDTO>> { new() };
            return;
        }
        DivideChallengesByRows(challenges.ToList());
    }
    
    private void DivideChallengesByRows(List<ChallengeDTO> challenges)
    {
        var challengesPerRow = new List<List<ChallengeDTO>>();
        var row = new List<ChallengeDTO>();
        foreach (var challenge in challenges)
        {
            row.Add(challenge);
            if (row.Count == 3)
            {
                challengesPerRow.Add(row);
                row = new List<ChallengeDTO>();
            }
        }
        challengesPerRow.Add(row);
        ChallengesPerRow = challengesPerRow;
    }
}
