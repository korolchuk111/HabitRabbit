@layout MainLayout
@page "/setting"
@attribute [Authorize]

<AuthorizeView>
    <Authorized>
        <UserLine/>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <form role="form">
                                <label>Username</label>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="email-addon">
                                </div>
                                <label>Email</label>
                                <div class="mb-3">
                                    <input type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn bg-gradient-info w-40 mt-4 mb-0 mx-0">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <form role="form">
                                <label>Сurrent password</label>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                </div>
                                <label>New password</label>
                                <div class="mb-3">
                                    <input type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                                </div>
                                <div class="text-center">
                                    <button type="button" class="btn bg-gradient-info w-40 mt-4 mb-0 mx-0">Change</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-xl-4">
                    <div class="card h-30">
                        <div class="card-body">
                            <form role="form">
                                <div class="text-center">

                                        <button type="button" class="btn btn-block bg-gradient-danger mt-4 mb-0 mx-0 mb-3" data-bs-toggle="modal" data-bs-target="#modal-notification">Delete profile</button>
                                        <div class="modal fade" id="modal-notification" tabindex="-1" role="dialog" aria-labelledby="modal-notification" aria-hidden="true">
                                          <div class="modal-dialog modal-danger modal-dialog-centered modal-" role="document">
                                            <div class="modal-content">
                                              <div class="modal-header">
                                                <h6 class="modal-title" id="modal-title-notification"></h6>
                                                <button type="button" class="btn-close text-dark" data-bs-dismiss="modal" aria-label="Close">
                                                  <span aria-hidden="true">×</span>
                                                </button>
                                              </div>
                                              <div class="modal-body">
                                                <div class="py-3 text-center">
                                                  <i class="ni ni-bell-55 ni-3x"></i>
                                                  <h4 class="text-gradient text-danger mt-4">Are you sure?</h4>
                                                  <p>After these steps, your account will be deleted and access will be lost!</p>
                                                </div>
                                              </div>
                                              <div class="modal-footer">
                                                <button type="button" class="btn bg-gradient-danger">Delete</button>
                                                <button type="button" class="btn btn-outline-secondary ml-auto" data-bs-dismiss="modal">Cancel</button>
                                              </div>
                                            </div>
                                          </div>
                                        </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Authorized>

</AuthorizeView>

