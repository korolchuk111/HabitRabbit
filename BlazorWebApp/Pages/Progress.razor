@layout MainLayout
@page "/"
@using Client.Infrastructure
@using global::Shared.DailyTaskDTO
@attribute [Authorize]

@inject HttpDailyTaskService _dailyTaskService

<AuthorizeView>
    <Authorized>
    <UserLine/>
    <div class="container-fluid py-4">
    @* <div class="row"> *@
    @*         <div class="col-12 d-flex justify-content-center mb-2"> *@
    @*             <button type="button" class="btn bg-gradient-primary btn-lg">Day</button> *@
    @*             <button type="button" class="btn bg-gradient-primary btn-lg">Week</button> *@
    @*             <button type="button" class="btn bg-gradient-primary btn-lg">Month</button> *@
    @*         </div> *@
